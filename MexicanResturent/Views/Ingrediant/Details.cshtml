@model Ingrediant
@{
    ViewBag.Title="Ingrediant Details";
}
<h1>@Model.Name Details</h1>


@if (Model.ProductIngrediants != null && Model.ProductIngrediants.Any())
{
    <h4>Products</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Description</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var productIngrediant in Model.ProductIngrediants)
            {
                <tr>
                    <td>@productIngrediant.Product.Name</td>
                    <td>@productIngrediant.Product.Description</td>
                    <td>@productIngrediant.Product.Price</td>
                </tr>
            }
        </tbody>
    </table>
}
<div>
    <a asp-action="Index">Back to List</a>
</div>