@model IEnumerable<Ingrediant>

    @{
    ViewData["Title"] = "List of Resturant Ingrediants";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Ingrediants</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fa fa-plus"></i>+ New Ingrediant
    </a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
          
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(Ingrediant i in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => i.Name)
                </td>
                <td class="text-end">
                    <a asp-action="Details" asp-route-id="@i.IngrediantId" class="btn btn-sm btn-info me-1">
                        <i class="bi bi-eye"></i>
                    </a>
                    <a asp-action="Edit" asp-route-id="@i.IngrediantId" class="btn btn-sm btn-warning me-1">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@i.IngrediantId" class="btn btn-sm btn-danger">
                        <i class="bi bi-trash"></i>
                    </a>
                </td>
            </tr>
        }

    </tbody>
</table>