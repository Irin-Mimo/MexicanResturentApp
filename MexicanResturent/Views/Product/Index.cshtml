@model IEnumerable<Product>

@{
    ViewData["Title"] = "Tequilas Menu Items";
}
@functions{
     string GetDeleteModalId(Product pdt)
    {
        return "#deleteModal"+ pdt.ProductId;
    }
    string GetModalId(Product pdt)
    {
        return "deleteModal" +pdt.ProductId;
    }
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Tequilas Menu Items</h2>
    <a asp-action="AddEdit" class="btn btn-primary">
        <i class="fa fa-plus"></i>+ New Item
    </a>
</div>
<form method="get" asp-action="Index" class="mb-3 d-flex">
    <input type="text" name="search" class="form-control me-2"
           value="@ViewBag.Search" placeholder="Search Products..." />
    <button type="submit" class="btn btn-primary">
        <i class="bi bi-search"></i>
    </button>
</form>


<div class="row">
    @foreach(Product pdt in Model)
    {
        <div class="col-md-4">
            <form asp-action="delete" asp-controller="product" method="post">
                <input type="hidden" asp-for="@pdt.ProductId" name="id" />
                <div class="card" style="width:18rem;">

                    <img src="~/images/@pdt.ImageUrl"
                         class="card-img-top fixed-image-height"
                         alt="@pdt.Description"/>
                    <div class="card-body">
                        <h5 class="card-title">@pdt.Name</h5>
                        <p class="card-text">@pdt.Description</p>
                        <p class="card-text">@pdt.Price.ToString("C")</p>
                        <p class="card-text">Quantity In Stock: @pdt.Stock</p>
                        <a class="btn btn-info" asp-controller="Product" asp-action="AddEdit" asp-route-id="@pdt.ProductId"><i class="bi bi-pencil-fill">Edit</i></a>

                        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="@GetDeleteModalId(pdt)"><i class="bi bi-trash">Delete</i>
                        </button>

                        <div class="modal fade" id="@GetModalId(pdt)" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">Are you sure you want to delete @pdt.Name ?</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                   
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                        <button type="submit" class="btn btn-danger">Delete</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    }
</div>